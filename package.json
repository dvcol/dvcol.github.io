{
  "name": "@dvcol/site",
  "version": "1.1.1",
  "description": "Shell for the github page dvcol.github.io",
  "author": "dvcol",
  "homepage": "https://github.com/dvcol/dvcol.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/dvcol.github.io.git"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">= 7"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "test:unit": "vitest run --environment jsdom --coverage",
    "test:watch": "vitest --environment jsdom",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "lint:fix": "pnpm run lint --fix",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "dependencies": {
    "solid-js": "^1.6.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@dvcol/eslint-plugin-presets": "^1.3.2",
    "@dvcol/stylelint-plugin-presets": "^1.1.0",
    "eslint": "^8.36.0",
    "extract-changelog-release": "^1.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "sass": "^1.59.3",
    "standard-version": "^9.5.0",
    "stylelint": "^14.16.1",
    "typescript": "^5.0.2",
    "vite": "^4.2.0",
    "vite-plugin-solid": "^2.6.1",
    "vitest": "^0.29.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx",
        "svelte"
      ],
      "allowedVersions": {
        "stylelint": "^14.0.0"
      }
    }
  }
}
