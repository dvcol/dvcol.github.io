{
  "name": "@dvcol/site",
  "type": "module",
  "version": "1.5.0",
  "description": "Shell for the github page dvcol.github.io",
  "author": "dvcol",
  "homepage": "https://github.com/dvcol/dvcol.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/dvcol.github.io.git"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">= 7"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "dev:sw": "SERVICE_WOKER=true vite",
    "build": "vite build",
    "serve": "pnpm run build && vite preview",
    "test:unit": "vitest run --environment jsdom --coverage",
    "test:watch": "vitest --environment jsdom",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "style": "stylelint src/**/*.{css,scss,less,html}",
    "style:fix": "yarn style --fix",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "dependencies": {
    "@dvcol/about-me": "^1.1.2",
    "@dvcol/synology-extension": "^3.0.22",
    "@solid-primitives/i18n": "^1.2.4",
    "@solidjs/meta": "^0.28.4",
    "@solidjs/router": "^0.8.2",
    "@suid/icons-material": "^0.5.11",
    "@suid/material": "^0.11.1",
    "solid-js": "~1.6.16",
    "solid-particles": "^2.9.3",
    "solid-toast": "^0.5.0",
    "tsparticles": "^2.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@dvcol/eslint-plugin-presets": "^1.3.6",
    "@dvcol/stylelint-plugin-presets": "^1.1.5",
    "@dvcol/vite-plugin-i18n": "^1.1.2",
    "@suid/vite-plugin": "^0.1.2",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.36.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-solid": "^0.12.0",
    "extract-changelog-release": "^1.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "sass": "^1.59.3",
    "solid-devtools": "^0.26.0",
    "standard-version": "^9.5.0",
    "stylelint": "^15.3.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.1",
    "vite-plugin-i18n-resources": "^1.0.3",
    "vite-plugin-pwa": "^0.14.7",
    "vite-plugin-solid": "~2.6.1",
    "vitest": "^0.29.7",
    "workbox-window": "^6.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx",
        "svelte"
      ],
      "allowedVersions": {
        "stylelint": ">=15"
      }
    }
  }
}
